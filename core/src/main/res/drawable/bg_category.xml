    <corners android:radius="0dp"/>

    <gradient android:angle="135"
        android:type="linear"
        android:startColor="@color/blue"
        android:centerColor="@color/blue"
        android:endColor="@color/secondaryColor"
        android:useLevel="true"/>

    <size android:height="250dp"
        android:width="250dp"/>
</shape>